# Project Configuration
PROJECT_NAME=sunbird
APP_ENV=development

# Database Configuration (PostgreSQL 16)
DB_HOST=db
DB_PORT=5432
DB_NAME=sunbird_db
DB_USER=sunbird_user
DB_PASSWORD=CHANGE_ME_GENERATE_SECURE_PASSWORD

# API Service
API_PORT=4402
API_URL=http://localhost:4402

# Frontend (WWW) Service
